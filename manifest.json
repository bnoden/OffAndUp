{
  "name": "OfferUpUI",
  "description": "For OfferUp.com. Make sold items less visible and show listings inside of results page.",
  "version": "1.0",
  "homepage_url": "https://github.com/bnoden/OfferUpUI",

  "content_scripts": [
    {
      "matches": [
        "https://offerup.com/search/*",
        "https://offerup.com/item/detail/*",
        "https://offerup.com/p/*",
        "https://offerup.com/"
      ],
      "js": [
        "extendui.min.js"
      ]
    }
  ],

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "OfferUp UI Extentions"
  },

  "permissions": ["activeTab", "declarativeContent", "storage"],

  "manifest_version": 2
}
